

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Remtask</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Remtask.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.1.1-web/css/all.css"/>
</head>
<body>
    <header>
        <div class="container">
            <nav id="nav">
                <div class="logo">
                    <a asp-area="" asp-controller="Home" asp-action="Index">REM<span class="voltar">TASK</span></a>
                </div>

                 <div id="btn-menu">
                    <i class="fa-solid fa-bars"></i>
                </div>

                <div class="container-itens-menu ">
                    <a asp-area="" asp-controller="Tarefas" asp-action="Create" class="btn-criar-tarefa">Nova Tarefa</a>
            
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
